.page {
	width: 100%;
	height: 100%;
	background-color: white;
	
	/* 定义flex布局 */
	display: flex;
	flex-direction: row;
	justify-content: center;
}
.card {
	width: 650rpx;	/** upx响应式像素 **/
	height: 360rpx;
	background: url('https://img0.baidu.com/it/u=3357321276,1409653964&fm=253&fmt=auto&app=138&f=JPEG?w=860&h=430') repeat;
	border-radius: 15rpx;
	box-shadow: 3px 2px 10px #dedede;
	padding: 30rpx;
}
.logo {
	width: 200rpx;
}
.logo-wapper {
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
